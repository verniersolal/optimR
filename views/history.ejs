<% extend('layout') %>
<div class="container">
    <div class="row headerView center">
        <span id="historyTitle">Historique</span>
        <img id="historyImg" src="../static/img/history.png">
    </div>
    <div class="row">
        <div class="block col m12 s12 l12">
            <table id="historyList" class="striped responsive-table center">
                <thead>
                <tr>
                    <th>Départ</th>
                    <th>Arivvée</th>
                    <th>Distance(km)</th>
                    <th>Durée(min)</th>
                    <th>Calories</th>
                    <th> CO2(g/km)</th>
                    <th>NO2(g/km)</th>
                    <th>PM10(g/km)</th>
                    <th>Prix</th>
                    <th>Score</th>
                </tr>
                </thead>
                <tbody>
                <% trajets.forEach(function(t, i) { %>
                    <tr style="color:rgb(<%- i * 50 + 128 %>, 200, 0)">
                        <td><%= t.departure %></td>
                        <td><%= t.finish %></td>
                        <td><%- (t.distance / 1000).toFixed(2) %></td>
                        <td><%- (t.duration/ 60).toFixed(2) %></td>
                        <td><%- t.calories.toFixed(2) %></td>
                        <td><%- t.co2.toFixed(2) %></td>
                        <td><%- t.no2.toFixed(2) %></td>
                        <td><%= t.pm10 %></td>
                        <td><%= t.price %></td>
                        <td><%= t.score %></td>
                    </tr>
                <% }); %>
                </tbody>
            </table>
        </div>
    </div>
</div>
