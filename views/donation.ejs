<% extend('layout') %>
<div class="container row ">
    <div class="row headerView">
        <div class="col m12 l12 s12 center">
            <p class="flow-text">Donations</p>
        </div>
    </div>

    <div class="col m6 l4 s1">
        <div data-mh="card-group" class="card">
            <div data-mh="card-img" class="card-image waves-effect waves-block waves-light">
                <img class="activator" src="../static/img/logo_wings_of_the_ocean.png">
            </div>
            <div class="card-content">
                <span class="card-title activator grey-text text-darken-4">Wings of the ocean<i
                            class="material-icons right">more_vert</i></span>
                <p><a href="#modal1" class="waves-effect modal-trigger waves-light btn">Donner</a></p>
            </div>
            <div class="card-reveal">
                <span class="card-title grey-text text-darken-4">Informations supplémentaires<i
                            class="material-icons right">close</i></span>
                <p class="donation-desc">Soutenez le premier voilier qui dépollue l’océan, embarque des scientifiques et
                    vous apprend la voile !</p>
                <a class="waves-effect waves-light btn" target="_blank" href="https://www.wingsoftheocean.com/">Voir le
                    site</a>
            </div>
        </div>
    </div>

    <div class="col m6 l4 s1">
        <div data-mh="card-group" class="card">
            <div data-mh="card-img" class="card-image waves-effect waves-block waves-light">
                <img id="climates" class="activator" src="../static/img/logo_climates.png">
            </div>
